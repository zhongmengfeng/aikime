<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="?attr/layout_background"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_wrong"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <ImageView
            android:id="@+id/img_wrong"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/img_wrong"
            android:layout_width="158dp"
            android:layout_height="103dp" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:textColor="@color/corlorWhite"
            android:text="尴尬了，没有找到大人要找的东西..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="240dp"
            android:textColor="@color/corlorWhite"
            android:text="请您换一个关键词试试"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>