<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/study_background"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000"
        >

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_home_search"
            android:layout_width="331dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:paddingLeft="14.5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ek_start_study_shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ek_find_search"/>


            <EditText
                android:id="@+id/et_ek_fragment_find_edittext"
                android:layout_width="331dp"
                android:layout_height="30dp"
                android:layout_marginLeft="34dp"
                android:layout_gravity="center_vertical"
                android:hint="搜索课程、达人、阅读、试题"
                android:textColorHint="#e1e1e1"
                android:textSize="11.5sp"
                android:background="@color/transparent"/>

        </LinearLayout>

        <com.ichi2yiji.anki.view.FlowLayout
            android:id="@+id/fl_ek_activity_search_flowLayout"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.ichi2yiji.anki.view.FlowLayout>

    </LinearLayout>

</RelativeLayout>