<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="261dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="@drawable/deckreader_listview_bg_shape">

    <RelativeLayout
        android:id="@+id/title_img"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/dialog_top_img_share"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/lyt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/title_img"
        android:layout_marginTop="63.5dp"
        android:text="既然我们的APP好用"
        android:textSize="15sp"
        android:textColor="#0c0e10"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/lyt_1"
        android:layout_marginTop="20dp"
        android:text="那就分享给你的朋友们吧"
        android:textSize="15sp"
        android:textColor="#0c0e10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="23.5dp"
        >
        <TextView
            android:id="@+id/tv_no_thinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:text="不了，谢谢"
            android:textSize="14sp"
            android:textColor="#0c0e10"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="18dp"
            android:layout_centerInParent="true"
            android:background="@color/actionsheet_gray"/>

        <TextView
            android:id="@+id/tv_goto_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:text="好的，去分享"
            android:textSize="14sp"
            android:textColor="#0c0e10"/>
    </RelativeLayout>



</RelativeLayout>