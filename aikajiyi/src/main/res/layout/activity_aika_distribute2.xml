<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_aika_distribute"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/layout_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:id="@+id/rl_aika_distribute_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_aika_distribute_back"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/arrow_left_new" />

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/iv_aika_distribute_back"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="19dp" />-->

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="分发课件"
            android:textColor="#ffffff"
            android:textSize="18dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/round"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_aika_distribute_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="27dp"
            android:layout_marginTop="28.5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_aika_distribute_class_icon"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/square" />

            <!-- 标题 -->
            <TextView
                android:id="@+id/tv_aika_distribute_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择班级"
                android:textColor="#0c0e10"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_aika_distribute_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0c0e10"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_aika_distribute_class_rightarrow"
                android:layout_width="8.5dp"
                android:layout_height="13.5dp"
                android:layout_marginLeft="35.5dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/arrow_right_new" />

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_aika_distribute_stu"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/ll_aika_distribute_stu_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:orientation="horizontal" >
        </LinearLayout>

        <View
            android:id="@+id/divider_new"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/listview_divider_setwidth" />

        <LinearLayout
            android:id="@+id/ll_aika_distribute_courseware"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18.5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_aika_distribute_courseware_icon"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/square" />

            <!-- 标题 -->
            <TextView
                android:id="@+id/tv_aika_distribute_courseware_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课件名称"
                android:textColor="#0c0e10"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_aika_distribute_courseware"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0c0e10"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_aika_distribute_courseware_rightarrow"
                android:layout_width="8.5dp"
                android:layout_height="13.5dp"
                android:layout_marginLeft="35.5dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/arrow_right_new" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_aika_distribute_courseware_confirm"
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="19dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_button"
            android:text="确认分发"
            android:textColor="@color/white"
            android:textSize="17dp" />

    </LinearLayout>

</LinearLayout>
