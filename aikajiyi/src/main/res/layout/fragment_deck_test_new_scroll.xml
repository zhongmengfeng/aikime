<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ededed"
    tools:context="com.ichi2yiji.anki.fragment.DeckTestFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_test_group"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="44dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>




    <RelativeLayout
        android:id="@+id/bottom_deck_test"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?attr/layout_background"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/text_load_online_test"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@drawable/text_color_selector"
            android:text="在线导入"
            />


        <TextView
            android:id="@+id/text_share_library"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:textColor="@drawable/text_color_selector"
            android:textSize="18sp"
            android:clickable="true"
            android:gravity="center_vertical|right"
            android:text="共享题库"

            />

    </RelativeLayout>

</RelativeLayout>
