                <ImageView
                    android:id="@+id/slm_iv_back6"
                    style="@style/slideImageStyle"
                    android:src="@drawable/arrow_right_gray" />
            </LinearLayout>

            <TextView
                android:layout_width="210dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFBEBEBE"/>

            <LinearLayout
                android:id="@+id/slm_lyt_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/slidemenu_text_selector"
                android:clickable="true">
                <ImageView
                    android:id="@+id/slm_iv_icon7"
                    style="@style/slideMenuLeftImgStyle"
                    android:src="@drawable/list_icon7"/>
                <TextView
                    android:id="@+id/slm_tv_text7"
                    style="@style/slideTextStyle"
                    android:text="个人中心" />

                <ImageView
                    android:id="@+id/slm_iv_back7"
                    style="@style/slideImageStyle"
                    android:src="@drawable/arrow_right_gray" />
            </LinearLayout>

            <TextView
                android:layout_width="210dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFBEBEBE"/>

            <LinearLayout
                android:id="@+id/slm_lyt_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/slidemenu_text_selector"
                android:clickable="true">
                <ImageView
                    android:id="@+id/slm_iv_icon8"
                    style="@style/slideMenuLeftImgStyle"
                    android:src="@drawable/list_icon8"/>
                <TextView
                    android:id="@+id/slm_tv_text8"
                    style="@style/slideTextStyle"
                    android:text="在线帮助" />

                <ImageView
                    android:id="@+id/slm_iv_back8"
                    style="@style/slideImageStyle"
                    android:src="@drawable/arrow_right_gray" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
