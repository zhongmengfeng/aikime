<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/study_background"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:id="@+id/rl_ek_activity_wallet_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_ek_activity_wallet_back"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ek_return" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/iv_ek_activity_wallet_back"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="19dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="我的钱包"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize_18" />
    </RelativeLayout>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="17dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="30dp"
            android:paddingLeft="14dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_15"
            android:text="账户余额（元）"
            android:layout_marginBottom="45dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_ek_activity_wallet_balance"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:textSize="55sp"
            android:text="10.00"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/tv_ek_activity_wallet_detail"
            android:drawableRight="@drawable/aika"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_15"
            android:gravity="center_vertical"
            android:text="明细"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_ek_activity_wallet_withdraw"
            android:layout_marginTop="28dp"
            android:drawableRight="@drawable/aika"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_15"
            android:gravity="center_vertical"
            android:text="提现"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>