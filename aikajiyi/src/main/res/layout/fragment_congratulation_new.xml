<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/layout_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="31.5dp"
        android:background="@drawable/congratulation_fragment_bg_shape">

        <RelativeLayout
            android:id="@+id/view_shot_group"
            android:layout_width="350dp"
            android:layout_height="450dp"
            android:background="@drawable/congratulation_fragment_bg_shape">
            <TextView
                android:id="@+id/line_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="恭喜你！"
                android:textColor="#0c0e10"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/line_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="已经完成这个记忆库今日任务量"
                android:textColor="#0c0e10"
                android:textSize="18sp"/>

            <LinearLayout
                android:id="@+id/line_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17.5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在"
                    android:textColor="#0c0e10"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="9"
                    android:textColor="#ed5565"
                    android:textSize="19sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分钟内学习了"
                    android:textColor="#0c0e10"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_card_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="100"
                    android:textColor="#ed5565"
                    android:textSize="19sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张卡牌"
                    android:textColor="#0c0e10"
                    android:textSize="15sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/line_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="评论计数"
                android:textColor="#0c0e10"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/line_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="已回答的问题的数量"
                android:textColor="#0c0e10"
                android:textSize="13sp"/>

            <!-- 暂时不用,暂用WebView展示报表-->
            <com.ichi2yiji.anki.stats.ChartView
                android:id="@+id/chart_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_below="@id/line_5"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <WebView
                android:id="@+id/webview_congratulation"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/line_3"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:id="@+id/line_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/webview_congratulation"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="#0000fe" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="学习"
                    android:textColor="#0c0e10"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/learn_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="79"
                    android:textColor="#0c0e10"
                    android:textSize="15sp"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="39dp"
                    android:background="#ed5565" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="复习"
                    android:textColor="#0c0e10"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/review_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19"
                    android:textColor="#0c0e10"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_6"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="正确率"
                    android:textColor="#0c0e10"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26.5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="重来数量："
                            android:textColor="#0c0e10"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/again_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:textColor="#0c0e10"
                            android:textSize="13sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="（"
                            android:textColor="#0c0e10"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/correct_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="23%"
                            android:textColor="#0c0e10"
                            android:textSize="13sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="正确率）"
                            android:textColor="#0c0e10"
                            android:textSize="13sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14.5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="熟悉卡片回答正确率："
                            android:textColor="#0c0e10"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/familiar_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="78%"
                            android:textColor="#0c0e10"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/line_8"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/self_define_learning"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="自定义学习"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/button_bg_shape_1"/>
            <Button
                android:id="@+id/button_share"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="95dp"
                android:text="打卡晒晒"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/button_bg_shape_2"/>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>