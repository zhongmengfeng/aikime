<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/study_background"
    tools:context="com.ichi2yiji.anki.AikaActivity">
    <LinearLayout
        android:paddingLeft="30dp"
        android:paddingRight="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="150dp"
        android:src="@drawable/ek_ekar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="19dp"
        android:textSize="@dimen/textsize_24"
        android:textColor="@color/colorWhite"
        android:text="艾卡记忆，神奇的记忆"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" >
                <RelativeLayout
                    android:background="@drawable/ek_start_study_shape_white_bg"
                    android:layout_centerInParent="true"
                    android:layout_width="113.5dp"
                    android:layout_height="48.5dp" >
                    <ImageView
                        android:src="@drawable/ek_login"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" >
                <RelativeLayout
                    android:background="@drawable/ek_start_study_shape"
                    android:layout_centerInParent="true"
                    android:layout_width="113.5dp"
                    android:layout_height="48.5dp" >
                    <TextView
                        android:text="注册"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textsize_24"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="37dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_14"
            android:text="随便逛逛"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
