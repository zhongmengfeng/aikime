<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/study_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <RelativeLayout
            android:id="@+id/rl_ek_activity_selectchapter_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_ek_activity_selectchapter_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ek_return" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/iv_ek_activity_selectchapter_back"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="19dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/spinner_rl"
            android:layout_margin="5dp"
            android:background="@drawable/ek_spinner_style"
            android:layout_width="275dp"
            android:layout_centerInParent="true"
            android:layout_height="29dp">
            <TextView
                android:id="@+id/spinner_tv"
                android:gravity="center_vertical"
                android:text="全部"
                android:paddingRight="18dp"
                android:textColor="@color/colorWhite"
                android:drawableRight="@drawable/ek_spinner_icon"
                android:drawablePadding="18dp"
                android:layout_centerInParent="true"
                android:textSize="@dimen/textsize_14"
                android:paddingLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="21.5dp" />
        </RelativeLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/my_etail_lst"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>