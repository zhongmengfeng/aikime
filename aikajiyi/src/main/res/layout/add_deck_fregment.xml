<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="?attr/layout_background"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_add_deck_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_add_return"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:layout_centerVertical="true"
                android:src="@drawable/inter"
                android:layout_width="50px"
                android:layout_height="50px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_add_return"
                android:text="返回"
                android:textSize="19dp"
                android:textColor="#ffffff"/>

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:text="添加课程"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_more"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="更多"
            android:textSize="15sp"
            android:textColor="#dadbdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/add_img_all"
            android:layout_marginRight="15dp"
            android:text="全部分类"
            android:textColor="@color/colorText" />

        <ImageView
            android:id="@+id/add_img_all"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="27dp"
            android:src="@drawable/img_qq" />
    </RelativeLayout>
   <!-- <GridView
        android:id="@+id/addGridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
       ></GridView>-->
    <!--<com.custom.vg.list.CustomListView
        android:id="@+id/mCustomview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.custom.vg.list.CustomListView>-->
   <com.ichi2yiji.anki.view.FlowLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/mFlowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.ichi2yiji.anki.view.FlowLayout>

    <include
        android:visibility="gone"
        android:id="@+id/add_rl_wrong"
        layout="@layout/layout_wrong"
        ></include>

    <RelativeLayout
        android:id="@+id/add_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/recycler_back">

        <com.ichi2yiji.anki.view.BaseListView
            android:id="@+id/addRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/recycler_back"
            android:fastScrollEnabled="false"
            android:scrollbars="none"></com.ichi2yiji.anki.view.BaseListView>
    </RelativeLayout>



</LinearLayout>