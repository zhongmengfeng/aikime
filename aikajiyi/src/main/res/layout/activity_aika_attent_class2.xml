<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/layout_background"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_aika_attent"
    tools:context="com.ichi2yiji.anki.AikaAttentClassActivity2"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <RelativeLayout
            android:id="@+id/rl_aika_attend_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_aika_attend_back"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_left_new"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/iv_aika_attend_back"
                android:text="返回"
                android:textSize="19dp"
                android:textColor="#ffffff"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:text="我的关注"
            android:textSize="18dp"
            android:textColor="#ffffff"/>

        <ImageView
            android:id="@+id/iv_aika_attend_guanzhu"
            android:layout_centerVertical="true"
            android:src="@drawable/jiahao"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_height="20dp" />

    </RelativeLayout>

    <ListView

        android:id="@+id/lv_aika_attend_listview"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:divider="@drawable/line"
        android:dividerHeight="@dimen/md_divider_height">

    </ListView>

</LinearLayout>