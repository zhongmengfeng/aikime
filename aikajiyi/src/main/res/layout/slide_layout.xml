<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/grey_color">
    <LinearLayout
        android:id="@+id/linear_bar"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:background="#e7abff"
        android:visibility="gone"/>


    <ImageView
        android:id="@+id/slm_iv_bg"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="fitXY"
        android:src="@drawable/background" />


    <RelativeLayout
        android:id="@+id/slm_lyt_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="36dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/slm_iv_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/headportrait"
            app:riv_border_color="@color/grey_color"
            app:riv_border_width="2dp"
            app:riv_oval="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/slm_lyt_head"
        android:layout_marginTop="57dp">
        <ImageView
        android:id="@+id/slm_iv_login"
        android:layout_width="86dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/login" />
        <TextView
            android:id="@+id/slm_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="invisible"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

   <include layout="@layout/slidemenu_bottom_layout"/>


</RelativeLayout>
