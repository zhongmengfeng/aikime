<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="304dp"
    android:layout_height="339dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp"
    android:background="@color/colorWhite"
    app:cardMaxElevation="12dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
       />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@drawable/home_add_to"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="司法考试全套干货"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_17"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_62"
                android:gravity="center_horizontal|bottom"
                android:text="10"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="center_horizontal|bottom"
                android:text="今日待学习"
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:text="50"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_62" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:paddingBottom="10dp"
                android:text="今日待复习"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>
         <LinearLayout
             android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
             <RelativeLayout
                 android:id="@+id/rl_ek_view_card_item_selectchapter"
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="match_parent">
                 <TextView
                     android:layout_centerInParent="true"
                     android:gravity="center"
                     android:text="章节选择"
                     android:background="@drawable/chapter_selection"
                     android:textSize="@dimen/textsize_14"
                     android:textColor="@color/colorTuhuang"
                     android:layout_width="70dp"
                     android:layout_height="21dp" />
             </RelativeLayout>
             <RelativeLayout
                 android:id="@+id/rl_ek_view_card_item_prepareexam"
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="match_parent">
                 <TextView
                     android:layout_centerInParent="true"
                     android:gravity="center"
                     android:text="临考备战"
                     android:background="@drawable/chapter_selection"
                     android:textSize="@dimen/textsize_14"
                     android:textColor="@color/colorTuhuang"
                     android:layout_width="70dp"
                     android:layout_height="21dp" />
             </RelativeLayout>

         </LinearLayout>
        <TextView
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</android.support.v7.widget.CardView>