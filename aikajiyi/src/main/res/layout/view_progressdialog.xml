<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ichi2yiji.anki.AikaActivity">

    <LinearLayout
        android:id="@+id/ll_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/progressdialog_corner"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:minWidth="130dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/ivBigLoading"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivSmallLoading"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:visibility="visible" />

        <com.ichi2yiji.anki.view.RoundProgressBar
            android:id="@+id/rpb_progressbar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:visibility="gone"
            pv:centreColor="#ffffff"
            pv:progress="0"
            pv:ringColor="@color/colorAccent"
            pv:ringProgressColor="@color/colorhuise"
            pv:ringWidth="3dp"
            pv:startAngle="0"
            pv:textColor="#000000"
            pv:textSize="18sp" />

        <TextView
            android:id="@+id/tv_download_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"/>
    </LinearLayout>

</LinearLayout>

