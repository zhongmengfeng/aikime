<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/study_background"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_home_search"
            android:layout_width="331dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:paddingLeft="14.5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ek_start_study_shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ek_find_search"/>


            <EditText
                android:id="@+id/et_ek_fragment_find_edittext"
                android:layout_width="331dp"
                android:layout_height="30dp"
                android:layout_marginLeft="19dp"
                android:layout_gravity="center_vertical"
                android:hint="输入要搜索的内容"
                android:textColorHint="#e1e1e1"
                android:textSize="11.5sp"
                android:background="@color/transparent"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="156.5dp"
                android:layout_height="86dp"
                android:background="@drawable/round"
                android:src="@drawable/aika" />

            <ImageView
                android:layout_width="156.5dp"
                android:layout_height="86dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/round"
                android:src="@drawable/aika"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ek_fragment_find_expert"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18.5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ek_activity_wallet_detail"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center_vertical"
                android:text="达人"
                android:textSize="@dimen/textsize_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/persional_right_arrow"/>

        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/hsv_ek_fragment_find_scrollview"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:visibility="visible"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.ichi2yiji.anki.view.ek.MyGridView
                    android:id="@+id/mgv_ek_fragment_find_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:numColumns="auto_fit"
                    style="@style/normal_style_listview"
                    android:stretchMode="spacingWidthUniform" >

                </com.ichi2yiji.anki.view.ek.MyGridView>

            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/ll_ek_fragment_find_fineclass"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18.5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ek_activity_wallet_class"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_15"
                android:layout_gravity="center_vertical"
                android:text="精品课程"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/persional_right_arrow"/>

        </LinearLayout>

        <com.ichi2yiji.anki.view.ek.MyGridView
            android:id="@+id/MyGridView"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.ichi2yiji.anki.view.ek.MyGridView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="156.5dp"
                        android:layout_height="86dp"
                        android:background="@drawable/round"
                        android:src="@drawable/aika" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="9dp"
                        android:text="高中物理-机械波"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="891人学习"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="156.5dp"
                        android:layout_height="86dp"
                        android:background="@drawable/round"
                        android:src="@drawable/aika" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="9dp"
                        android:text="高中物理-曲线运动"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="1394人学习"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14.5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="156.5dp"
                        android:layout_height="86dp"
                        android:background="@drawable/round"
                        android:src="@drawable/aika" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="9dp"
                        android:text="高中物理-万有引力与航天"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="891人学习"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="156.5dp"
                        android:layout_height="86dp"
                        android:background="@drawable/round"
                        android:src="@drawable/aika" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="9dp"
                        android:text="高中物理-运动的描述"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="1394人学习"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>