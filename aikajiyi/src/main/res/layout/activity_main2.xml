        <ImageView
            android:id="@+id/icon_main_home"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/home_img_selector"
            android:layout_alignTop="@+id/top_right_lyt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp" />

        <ImageView
            android:id="@+id/icon_main_home2"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/home_img_selector"
            android:layout_alignTop="@+id/top_right_lyt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp" />

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar">
    </FrameLayout>


    <!-- 帮助-->
    <RelativeLayout
        android:id="@+id/rl_guide"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 背景 -->
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="10"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="@drawable/img_guide_bg1"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:id="@+id/iv_guide_close"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/img_guide_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>

        <!-- 帮助动画 -->
        <ImageView
            android:id="@+id/iv_guide"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
</RelativeLayout>
