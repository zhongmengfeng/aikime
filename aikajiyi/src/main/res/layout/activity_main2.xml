        <LinearLayout
            android:id="@+id/title_lyt"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <!-- 牌组 -->
            <RelativeLayout
                android:id="@+id/deck_picker_lyt2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_gravity="center"
                android:clickable="true">
                <TextView
                    android:id="@+id/deck_picker2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="我的课程"
                    android:textColor="@color/white"
                    />
                <View
                    android:id="@+id/deck_picker_mark_view2"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/main_page_title_tab_line"/>
            </RelativeLayout>

            <!-- 阅读 -->
            <RelativeLayout
                android:id="@+id/deck_reader_lyt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:clickable="true">
                <TextView
                    android:id="@+id/deck_reader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="阅读"
                    android:textColor="?attr/main_page_title_color"
                    />

                <View
                    android:id="@+id/deck_reader_mark_view"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/main_page_title_tab_line"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <!-- 牌组 -->
            <RelativeLayout
                android:id="@+id/deck_picker_lyt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:clickable="true">
                <TextView
                    android:id="@+id/deck_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="牌组"
                    android:textColor="?attr/main_page_title_color"
                    />
                <View
                    android:id="@+id/deck_picker_mark_view"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/main_page_title_tab_line"/>
            </RelativeLayout>

            <!-- 模考 -->
            <RelativeLayout
                android:id="@+id/deck_test_lyt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:clickable="true">
                <TextView
                    android:id="@+id/deck_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="模考"
                    android:textColor="?attr/main_page_title_color"
                    />
                <View
                    android:id="@+id/deck_test_mark_view"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/main_page_title_tab_line"
                    android:visibility="invisible"/>
            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/top_right_lyt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:clickable="true">
            <ImageView
                android:id="@+id/top_right"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:focusable="true"
                android:src="@drawable/top_right_new"
                />

        </RelativeLayout>

        <!--<ImageView-->
            <!--android:id="@+id/top_right"-->
            <!--android:layout_width="22dp"-->
            <!--android:layout_height="22dp"-->
            <!--android:layout_centerVertical="true"-->
